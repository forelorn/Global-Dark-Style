{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "Global Dark Style",
  "description": "A configure dark theme with exception list to change everything to real dark",

  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },

  "permissions": [
    "*://*/*",
    "webNavigation",
    "storage",
    "contextMenus",
    "notifications",
    "tabs"
  ],

  "homepage_url": "http://add0n.com/global-dark-style.html",

  "browser_action":{
    "default_icon": {
      "16": "data/icons/16.png",
      "19": "data/icons/19.png",
      "32": "data/icons/32.png",
      "38": "data/icons/38.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png",
      "128": "data/icons/128.png"
    }
  },

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },

  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  }
}
